datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String  @id @default(uuid()) @postgresql.Uuid
  name     String?
  email    String? @unique
  password String?
  posts    Post[]  @relation("Post_author")
}

model Irrigator {
  id          String   @id @default(uuid()) @postgresql.Uuid
  name        String?
  lat         Float?
  long        Float?
  status      String?
  enabled     Boolean?
  description String?
  gateway     Gateway? @relation("Gateway_irrigator")
}

model Gateway {
  id                  String     @id @default(uuid()) @postgresql.Uuid
  fabricationDate     DateTime?
  housingType         String?
  loraAntennaPosition String?
  irrigator           Irrigator? @relation("Gateway_irrigator", fields: [irrigatorId], references: [id])
  irrigatorId         String?    @unique @map("irrigator") @postgresql.Uuid
}

model Post {
  id          String    @id @default(uuid()) @postgresql.Uuid
  title       String?
  status      String?
  content     Json?
  publishDate DateTime?
  author      User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId    String?   @map("author") @postgresql.Uuid
  tags        Tag[]     @relation("Post_tags_Tag_posts")

  @@index([authorId])
}

model Tag {
  id    String  @id @default(uuid()) @postgresql.Uuid
  name  String?
  posts Post[]  @relation("Post_tags_Tag_posts")
}